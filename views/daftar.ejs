<div class="daftar-container pt-[8rem]">
  <div class="flex px-[6rem] py-[3rem]">
    <div class="w-[65%]"></div>
    <form
      class="w-[35%]"
      action="https://api.form-data.com/f/bqtxth46icif4r4ot1p5qn"
      method="post"
    >
      <div class="mb-[1rem]">
        <h2 class="text-[2.5em]">Daftar</h2>
        <p class="text-[#DDDDDD] text-[15px]">
          Mari bergabung dan menjadi bagian dari Kampoeng Ilmu!
        </p>
      </div>
      <label class="text-[#DDDDDD]" for="email">Alamat email</label>
      <label
        class="input input-bordered flex items-center gap-2 bg-[#142938] border-white my-[0.5rem]"
      >
        <input
          type="email"
          id="email"
          name="email"
          class="grow"
          placeholder="Email"
          required
        />
      </label>

      <label class="text-[#DDDDDD]" for="email">Kata sandi</label>
      <label
        class="input input-bordered flex items-center gap-2 bg-[#142938] border-white my-[0.5rem]"
        id="pass-label"
      >
        <input
          type="password"
          id="password"
          name="password"
          class="grow"
          placeholder="Password"
          required
        />

        <img
          id="hide-password"
          src="assets/hide-password.png"
          alt=""
          class="w-[1.7rem] h-[1.7rem] cursor-pointer"
        />
      </label>
      <p
        class="text-[#DDDDDD] text-[13px]"
        style="display: none"
        id="password-strength-message"
      >
        Mengandung setidaknya 8 karakter campuran huruf dan angka
      </p>
      <div class="flex align-middle items-center mt-[3rem]">
        <input
          type="checkbox"
          class="checkbox checkbox-error rounded-none w-4 h-4"
          required
        />

        <p class="text-[15px] text-[#DDDDDD] ml-[5px]">
          Setujui <span class="underline">Syarat Penggunaan</span> dan
          <span class="underline">Kebijakan Privasi</span> kami
        </p>
      </div>
      <div class="flex align-middle items-center mt-[0.5rem]">
        <input
          type="checkbox"
          class="checkbox checkbox-error rounded-none w-4 h-4"
          required
        />

        <p class="text-[15px] text-[#DDDDDD] ml-[5px]">
          Berlangganan ke buletin bulanan kami
        </p>
      </div>

      <div
        class="g-recaptcha p-0 mt-[3rem]"
        data-sitekey="6Lel4Z4UAAAAAOa8LO1Q9mqKRUiMYl_00o5mXJrR"
      ></div>
      <input
        type="submit"
        value="Daftar"
        class="poppins mt-[2rem] btn px-[4rem] bg-[#FF9A01] rounded-[2rem] py-[1.1rem] border-none text-[#ffff] text-md z-[999] opacity-1"
      />
      <p class="mt-[0.5rem]">
        Sudah punya akun?
        <span class="underline text-[#FF9A01]">Masuk sekarang </span>
      </p>
    </form>
  </div>
</div>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script src="/js/daftar.js"></script>
