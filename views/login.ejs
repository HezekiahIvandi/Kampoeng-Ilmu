<div class="daftar-container pt-[8rem]">
  <div class="flex px-[6rem] py-[3rem]">
    <div class="w-[65%]"></div>
    <form class="w-[35%]" method="post" id="daftar-form" action="/login/submit">
      <div class="mb-[1rem]">
        <h2 class="text-[2.5em]">Login</h2>
        <p class="text-[#DDDDDD] text-[15px]">Masuk ke Kampoeng Ilmu!</p>
      </div>
      <label class="text-[#DDDDDD]" for="email">Alamat email</label>
      <label
        class="input input-bordered flex items-center gap-2 bg-[#142938] border-white my-[0.5rem]"
      >
        <input
          type="email"
          id="email"
          name="email"
          class="grow"
          placeholder="Email"
          required
        />
      </label>

      <label class="text-[#DDDDDD]" for="email">Kata sandi</label>
      <label
        class="input input-bordered flex items-center gap-2 bg-[#142938] border-white my-[0.5rem]"
        id="pass-label"
      >
        <input
          type="password"
          id="password"
          name="password"
          class="grow"
          placeholder="Password"
          required
        />

        <img
          id="hide-password"
          src="assets/hide-password.png"
          alt=""
          class="w-[1.7rem] h-[1.7rem] cursor-pointer"
        />
      </label>

      <input
        type="submit"
        value="Login"
        class="poppins mt-[2rem] btn px-[4rem] bg-[#FF9A01] rounded-[2rem] py-[1.1rem] border-none text-[#ffff] text-md z-[999] opacity-1"
      />
      <p class="mt-[0.5rem]">
        Belum punya akun?
        <a class="underline text-[#FF9A01]" href="/daftar"
          >Registrasi sekarang
        </a>
      </p>
    </form>
  </div>
</div>
<script src="/js/daftar.js"></script>
